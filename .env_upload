# Environment configuration for video upload detection app

# Model paths - use the same model as cam1
CEMENT_MODEL_PATH=./best_cement-bags_102.pt

# Detection settings (improved based on working code)
CONF_THRESHOLD=0.5

# Frame skip for detection (1 = process every frame, 2 = every 2nd frame, etc.)
# FRAME_SKIP=1 for best tracking quality - process every frame
FRAME_SKIP=5

# Inference image size (smaller = faster, larger = more accurate)
INFER_IMG_SIZE=320

# Maximum batch size for inference
MAX_BATCH_SIZE=1

# Upload folder for videos
UPLOAD_FOLDER=./uploads

# Multi-line coordinates for counting (x1,y1,x2,y2;x1,y1,x2,y2;...)
